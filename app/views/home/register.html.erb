<div class="center-left">
  <h2 class="register">Create a new Account</h2>
  <div class="registration-wrap">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <div class="label-wrap">
        <label><%= f.label :email %></label>
        <%= f.email_field :email, :autofocus => true %>
      </div>
      <div class="label-wrap">
        <label><%= f.label :first_name %></label>
        <input type="text">
      </div>
      <div class="label-wrap">
        <label><%= f.label :last_name %></label>
        <input type="text">
      </div>
      <div class="label-wrap">
        <label><%= f.label :password %></label>
        <%= f.password_field :password %>
      </div>
      <div class="label-wrap">
        <label><%= f.label :password_confirmation %></label>
        <%= f.password_field :password_confirmation %>
      </div>
      <div class="label-wrap">
        <button class="btn">Submit</button>
        <%= f.submit "Sign up" %>
      </div>
      <div class="clear"></div>
    <% end %>
  </div>
</div>
<%= render "layouts/right_add_column"%>