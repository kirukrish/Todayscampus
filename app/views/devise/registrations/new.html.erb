<div class="center-left">
  <h2 class="register">Create a new Account</h2>
  <div class="registration-wrap">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%#= devise_error_messages! %>
        <div class="label-wrap">
          <label for="user_email">Email<span class="required"> *</span></label>
          <%= f.email_field :email, :autofocus => true %>
					<span class="error"><%=resource.errors[:email].first %></span>
        </div>
        <div class="label-wrap">
					<label >First Name<span class="required"> *</span></label>
          <%= f.text_field :first_name %>
					<span class="error"><%=resource.errors[:first_name].first %></span>
        </div>
        <div class="label-wrap">
          <label >Last Name<span class="required"> *</span></label>
          <%= f.text_field :last_name %>
					<span class="error"><%=resource.errors[:last_name].first %></span>
        </div>
        <div class="label-wrap">
          <label >Password<span class="required"> *</span></label>
          <%= f.password_field :password %>
					<span class="error"><%=resource.errors[:password].first %></span>
        </div>
				
        <div class="label-wrap">
					<label  style="width:200px">Retype the Password<span class="required"> *</span></label>
          <%= f.password_field :password_confirmation %>
					<span class="error"><%=resource.errors[:password_confirmation].first %></span>
        </div>
				
				<div class="label-wrap">
					<label  style="width:260px">Register As<span class="required"> *</span></label>
          <%= f.select :user_role, options_for_select([["Jobseeker", "jobseeker"], ["Employer", "employer"] ]), {:prompt => "Register Type"}%>
					<span class="error"><%=resource.errors[:user_role].first %></span>
        </div>
				
				<div class="label-wrap" style="display:none;" id="institution_wrap">
          <label style="width:250px">Institution, Agency or Company <span class="required"> *</span></label>
          <%= f.text_field :institution %>
					<span class="error"><%=resource.errors[:institution].first %></span>
        </div>
				
        <!--<div class="label-wrap">
          <%#= f.button "Sign up", :class => 'btn' %>
        </div>
        <div class="clear"></div> -->
        <div class="label-wrap">
				<div class="label-wrap">
          <%= link_to "Sign in", new_session_path(resource_name), :class => 'btn' %>
					 <%= f.button "Register Now", :class => 'btn' %>
          <%#= link_to "Forgot your password?", new_password_path(resource_name), :class => 'fogot-password'  %>
        </div>
        </div>
        <div class="clear"></div>
    <% end %>
  </div>
</div>

<%= render "layouts/right_add_column"%>
