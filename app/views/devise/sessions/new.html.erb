<div class="center-left">
  <h2 class="register">User Login</h2>
  <div class="login-wrap">
    <div class="login-subwrap">
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div class="label-wrap">
          <label><%= f.label :email %></label>
          <%= f.email_field :email, :autofocus => true %>
        </div>
        <div class="label-wrap">
          <label><%= f.label :password %></label>
          <%= f.password_field :password %>
        </div>

          <% if true -%>
              <div class="label-wrap"><label style="width:250px;">Remember me <%= f.check_box :remember_me %></label></div>
          <% end -%>

        <div class="label-wrap">
          <%= f.button "Sign in", :class => 'btn' %>
        </div>
          <div class="clear"></div>
        <div class="label-wrap">
          <%= link_to "Sign up", new_registration_path(resource_name), :class => 'btn' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), :class => 'btn'  %>
        </div>
        <div class="clear"></div>
      <% end %>
    </div>
  </div>
</div>
<%= render "layouts/right_add_column"%>


